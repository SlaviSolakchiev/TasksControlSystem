@model CreateTaskInputModel
<form method="post" class="col-md-4">

    <div asp-validation-summary="All">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="LocationId"></label>
            <select class="form-control" asp-for="LocationId" asp-items="Model.Locations"></select>
            <option value="">Pick one</option>
            <span asp-validation-for="LocationId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Deadline"></label>
            <input asp-for="Deadline" class="form-control" />
            <span asp-validation-for="Deadline" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Budget"></label>
            <input asp-for="Budget" class="form-control" />
            <span asp-validation-for="Budget" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CategoryId"></label>
            <select class="form-control" asp-for="CategoryId" asp-items="Model.Categories"></select>
            <option value="">Pick one</option>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <input type="submit" class="btn btn-primary">
    </div>
</form>